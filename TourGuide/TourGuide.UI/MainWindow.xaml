<Window x:Class="TourGuide.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourGuide.UI"
        xmlns:components="clr-namespace:TourGuide.UI.Components"
        mc:Ignorable="d"
        Title="Home" 
        Height="600" Width="920"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#272537">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="JelonCorp" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="22" TextAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <RadioButton Content="Explore" Height="50" 
                             Foreground="White" FontSize="20" Background="#FF271131"
                             Style="{StaticResource MenuButtonStyleSelected}" IsChecked="True" IsEnabled="False"/>

                <RadioButton Content="Places" Height="50" 
                             Foreground="White" FontSize="20" 
                             Style="{StaticResource MenuButtonStyle}" IsEnabled="False" IsChecked="False"/>

                <RadioButton Content="Hotels" Height="50" 
                             Foreground="White" FontSize="20" 
                             Style="{StaticResource MenuButtonStyle}" IsEnabled="False" IsChecked="False"/>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1">
                <components:NavigationBar x:Name="navBar"/>
            </StackPanel>

            <ScrollViewer  Grid.Row="1" Grid.Column="1"  Name="ScrollViewer1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="510" CanContentScroll="True">
                <StackPanel  Grid.Row="1" Grid.Column="1" Margin="15,13,15,15">
                    <Label x:Name="Designations" Content="Destinations" FontSize="24" Width="140" HorizontalAlignment="Left" Foreground="White"/>

                    <ItemsControl x:Name="DestinationListTest" ItemsSource="{Binding Destinations}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Margin="0,8,0,0"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,8,0,0">
                                    <Border Width="686" Height="134">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                                <GradientStop Color="#5bc3ff" Offset="0.0"/>
                                                <GradientStop Color="#5bc3ff" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>

                                        <Border.Clip>
                                            <RectangleGeometry RadiusX="30"
                                   RadiusY="30"
                                   Rect="0,0,686,134">
                                            </RectangleGeometry>
                                        </Border.Clip>

                                        <Grid>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" 
                                   Foreground="White"
                                   FontSize="48" HorizontalAlignment="Left" Width="410" Margin="14,0,0,0">

                                                </TextBlock>
                                                <TextBlock Text="{Binding Description}" 
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   FontSize="24" HorizontalAlignment="Left" Width="639" Margin="27,9,0,0">

                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                </StackPanel>
            </ScrollViewer>

        </Grid>

    </Border>


</Window>
