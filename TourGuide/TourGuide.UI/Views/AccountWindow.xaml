<Window x:Class="TourGuide.UI.Views.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourGuide.UI.Views"
        xmlns:components="clr-namespace:TourGuide.UI.Components"
        mc:Ignorable="d"
        Title="Account" Height="720" Width="1280" Background="#FAFAFA">
    
    <Grid Grid.Row="1" Margin="0 20">
        <Border Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0 1" CornerRadius="4">
            <Grid Background="#FFFFFF">
                <StackPanel>
                    <Label Content="User" FontSize="30"/>
                    <Label Name="usernameLabel" FontSize="24"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
